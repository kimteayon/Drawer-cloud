.item-folder-img {
  width: 100%;
  height: 100%;
  position: absolute;
  border-radius: 2px;
}

.shared-icon {
  top: 0;
  right: 0;
  position: absolute;
  width: 0;
  height: 0;
  border-top: 40px solid #2196f3;
  border-left: 40px solid transparent;
}

.container-folder {
  display: block;
  width: 100%;
  margin: 0 auto;
  margin-top: 32px;
  padding-left: 2%;
  overflow: hidden;
  margin-bottom: 55px;
}

.item-folder {
  width: 96%;
  height: 200px;
  display: block;
  position: relative;
  margin-top: 8px;
}

.item-folder-name {
  position: absolute;
  color: #fff;
  width: 100%;
  text-align: left;
  left: 20px;
  bottom: 10px;
}

.item-folder-share-img {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
}

.item-folder-share-info {
  display: inline-block;
  font-size: 12px;
  margin-right: 5px;
}

.item-folder-share-text {
  display: inline-block;
  font-size: 12px;
}

.item-folder-share {
  position: absolute;
  color: #fff;
  width: 100%;
  text-align: right;
  right: 20px;
  bottom: 10px;
}

.phcolor {
  color: #999;
}

.container-search {
  width: 100%;
  margin: 0 auto;
  position: fixed;
  height: 40px;
  top: 0;
  z-index: 99;
}

.search-icon {
  display: inline-block;
  width: 16px;
  height: 16px;
  margin-right: 5px;
  margin-left: 5px;
  vertical-align: middle;
}

.shared-icon-img {
  top: 5px;
  right: 5px;
  position: absolute;
  display: block;
  width: 16px;
  height: 16px;
}
.shared-icon-text {
  top: 5px;
  right: 5px;
  position: absolute;
  display: block;
  width: 16px;
  height: 16px;
  color: #fff;
  text-align: right;
  font-size: 12px;
}
