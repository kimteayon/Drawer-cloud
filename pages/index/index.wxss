.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}
.kind-list-describe{
  display: inline-block;
  color:#999;
 white-space:nowrap; 
  margin-left: 10rpx;
  width: 100px;
  overflow:hidden;
  text-overflow:ellipsis;
  line-height: 45px;
  vertical-align: top;
}
.kind-list-texts{
  line-height: 45px;
  display: inline-block;
  white-space:nowrap; 
  width: 80px;
  overflow:hidden;
  text-overflow:ellipsis;
  vertical-align: top;
}
.del {
  width: 180px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  color: #fff;
  -webkit-transform: translateX(200px);
  transform: translateX(200px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.kind-list-folder {
  width: 45px;
  height: 45px;
  margin-right: 10px;
  margin-left: 10px;
  display: inline-block;
  line-height: 45px;
  vertical-align: baseline;
}

