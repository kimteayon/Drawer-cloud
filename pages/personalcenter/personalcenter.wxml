<view class="index">
  <view class="index-hd">
    <view class="userinfo-image">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    </view>
    <view class="userinfo-nickname">{{userInfo.nickName}}</view>
    <view class="userinfo-total">
      <view class="total-num">
        <view class="num">
          {{folderCount}}
        </view>
        <view class='total-border'></view>
        <view class='name'>
          相册
        </view>
      </view>
      <view class='total-num'>
        <view class='num'>
          {{photoCount}}
        </view>
        <view class='name'>
          照片
        </view>
      </view>
    </view>
  </view>
  <view class="index-desc">更多功能，敬请期待...</view>
</view>